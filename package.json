{
  "name": "cotowali.org",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "nuxt",
    "build": "nuxt build",
    "preview": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "lint:docs:ja": "textlint --config ./.textlintrc.ja.js 'content/**/*.ja.md'",
    "lint:docs:en": "textlint --config ./.textlintrc.en.js 'content/**/*.en.md'",
    "lint:docs": "npm run lint:docs:ja && npm run lint:docs:en",
    "lint:docs:watch": "chokidar 'content/docs/**/*.md' -c 'npm run lint:docs'",
    "prepare": "husky install",
    "test": "jest --passWithNoTests",
    "firebase": "firebase",
    "firebase:deploy": "firebase deploy --only hosting"
  },
  "dependencies": {
    "@cotowali/design": "^0.3.4",
    "@mdi/js": "^5.9.55",
    "@nuxt/content": "^1.14.0",
    "@nuxtjs/firebase": "^7.6.1",
    "@nuxtjs/tailwindcss": "^4.2.0",
    "core-js": "^3.15.1",
    "nuxt": "^2.15.7",
    "nuxt-i18n": "^6.27.3",
    "prism-themes": "^1.8.0",
    "remark-code-import": "^0.3.0",
    "vue-scrollactive": "^0.9.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.7",
    "@nuxt/types": "^2.15.7",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.1",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/google-fonts": "^1.3.0",
    "@textlint-rule/textlint-rule-no-unmatched-pair": "^1.0.8",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "@vue/test-utils": "^1.2.1",
    "@zakuro9715/eslint-config-nuxt-typescript": "^4.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^27.0.5",
    "chokidar-cli": "^3.0.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.31.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-vue": "^7.14.0",
    "firebase-tools": "^9.16.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^10.5.4",
    "postcss": "^8.3.5",
    "textlint": "^12.0.2",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5",
    "vue-jest": "^3.0.4"
  }
}
